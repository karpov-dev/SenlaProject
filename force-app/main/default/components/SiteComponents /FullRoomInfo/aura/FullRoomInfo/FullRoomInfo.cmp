<aura:component>
    
    <aura:attribute name="room" type="Product2"/>
    
    <aura:registerEvent name="changedSelectedRoomEvent" type="c:changedSelectedRoomEvent"/>

    <lightning:card title="{!v.room.Name}">
        <aura:set attribute="actions">
            <lightning:buttonGroup>
                <c:CreateBookingCard roomId="{!v.room.Id}" variant="icon"/>
                <lightning:buttonIcon iconName="utility:chevronleft" alternativeText="close" onclick="{!c.closeComponent}" />
            </lightning:buttonGroup>
        </aura:set>
        <p class="slds-p-horizontal_small">
            <img src="{!$Resource.HotelPreview}" />
            <ul>
                <li>Room address: {!v.room.Room_Address__c}</li>
                <li>Rating: {!v.room.Rating__c}</li>
                <li>Description: {!v.room.Description}</li>
                <li>Conveniences: {!v.room.Conveniences__c}</li>
            </ul>
        </p>
    </lightning:card>


</aura:component>	
