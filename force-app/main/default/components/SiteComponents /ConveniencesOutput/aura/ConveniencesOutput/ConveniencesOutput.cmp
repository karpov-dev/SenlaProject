<aura:component>

    <aura:attribute name="conveniencesList" type="List" required="true" />

    <aura:if isTrue="{!v.conveniencesList}">
        <lightning:layout multipleRows="true">
            <aura:iteration items="{!v.conveniencesList}" var="item">
                <lightning:layoutItem size="3">
                    <lightning:icon iconName="standard:task2" size="xx-small" />
                    <span>
                        {<ui:inputText value="{!item}"/>
                    </span>
                </lightning:layoutItem>
            </aura:iteration>
        </lightning:layout>
        <aura:set attribute="else">
            elseBody
        </aura:set>
    </aura:if>

</aura:component>