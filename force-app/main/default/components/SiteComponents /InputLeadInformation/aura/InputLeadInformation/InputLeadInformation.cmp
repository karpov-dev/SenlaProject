<aura:component>

    <aura:attribute name="nextButtonDisabled" type="Boolean" default="true" />

    <div class="slds-m-around_x-small">
        <lightning:input aura:id="firstName" label="First Name" onchange="{!c.nextButtonDisabled}" required="true"/>
        <lightning:input aura:id="lastName" label="Last Name" onchange="{!c.nextButtonDisabled}" required="true"/>
        <lightning:input aura:id="phone" type="tel" label="Phone" onchange="{!c.nextButtonDisabled}" required="true"/>
        <lightning:input aura:id="email" type="email" label="Email" onchange="{!c.nextButtonDisabled}" required="true"/>
        <lightning:button variant="brand" class="slds-m-vertical_medium" label="Next" onclick="{!c.createLead}" disabled="{!v.nextButtonDisabled}"/>
    </div>
    
</aura:component>	
