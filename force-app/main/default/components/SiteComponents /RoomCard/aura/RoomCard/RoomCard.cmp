<aura:component>

    <aura:attribute name="room" type="Product2" required="true" />

    <aura:registerEvent name="changedSelectedRoomEvent" type="c:changedSelectedRoomEvent" />

    <aura:if isTrue="{!v.room}">
        <div class="slds-box slds-m-top_xx-small">
            <lightning:card title="{!v.room.Name}">
                <aura:set attribute="actions">
                    <lightning:buttonGroup>
                        <lightning:button variant="neutral" label="More" onclick="{! c.fireClickEvent }" />
                        <c:CreateBookingCard roomId="{!v.room.Id}" variant="icon" />
                    </lightning:buttonGroup>
                </aura:set>
                <p class="slds-p-horizontal_small">
                    Price: {!v.room.PricebookEntries[0].UnitPrice}
                </p>
            </lightning:card>
        </div>
    </aura:if>

</aura:component>